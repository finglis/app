<div id="<%= dom_id sale %>">
  <p>
    <strong>Customer:</strong>
    <%= sale.customer.number %>
  </p>

  <p>
    <strong>Store:</strong>
    <%= Store.find(sale.store_id).name %>
  </p>

    <% sale.line_items.each do |l| %>
    <p><%= Item.find(l.item_id).name %> <%= l.quantity %> <%= l.total_price_at_sale_time %></p>
    <% end %>
    total: <%= sale.total_price%>
</div>
